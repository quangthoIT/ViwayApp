<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_schedule">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>
            <TextView
                android:id="@+id/itemSchedule_tvTime"
                android:textSize="17sp"
                android:layout_marginStart="10dp"
                android:text="13:00"/>

            <ImageView
                android:id="@+id/itemSchedule_icDiemDi"
                android:src="@drawable/ic_diemden"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:tint="#808080"/>

            <TextView
                android:id="@+id/itemSchedule_tvDiaDiem"
                android:textSize="17sp"
                android:textStyle="bold"
                android:text="Xa la Đại Haàn"/>
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:minHeight="60dp">
            <TextView/>
            <ImageView
                android:id="@+id/itemSchedule_icDot"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@drawable/dot55"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:backgroundTint="#808080" />

            <TextView
                android:id="@+id/itemSchedule_tvDiaChi"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textColor="#808080"
                android:textSize="15sp"
                android:text="2389 Quốc lộ 1A, phường tân hưng thuận, quân 12 , TP.Hồ Chí Minh"/>
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>