<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_pickup_point">

    <LinearLayout
        android:id="@+id/itemPickupPoint_selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itemPickupPoint_tvTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="50dp"
                android:textSize="17sp"
                android:gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:text="13:00"/>

            <ImageView
                android:layout_width="wrap_content"
                android:backgroundTint="#000000"
                android:layout_height="match_parent"
                android:background="@drawable/ic_tru"/>

            <TextView
                android:id="@+id/itemPickupPoint_tvStation"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="17sp"
                android:layout_marginStart="10dp"
                android:text="BX Miền Đông Mới"/>

            <RadioButton
                android:id="@+id/itemPickupPoint_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:clickable="false"/>
        </LinearLayout>

        <TextView
            android:id="@+id/itemPickupPoint_tvAddress"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:textSize="15sp"
            android:textColor="#808080"
            android:text="Xa lộ hà nội, phường long bình, tpTĐ"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="#808080"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>